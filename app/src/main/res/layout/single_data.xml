<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:foreground="?android:selectableItemBackground"
  android:minHeight="128dp"
  card_view:cardCornerRadius="8dp"
  card_view:cardUseCompatPadding="true">

  <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
      android:id="@+id/tv_place"
      android:textStyle="bold"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
      card_view:layout_constraintEnd_toEndOf="parent"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toTopOf="parent"
      tools:text="Place"/>

    <TextView
      android:id="@+id/magnitude"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/magnitude"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toBottomOf="@+id/tv_place"/>

    <TextView
      android:id="@+id/tv_magnitude"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toEndOf="@+id/magnitude"
      card_view:layout_constraintTop_toTopOf="@+id/magnitude"
      tools:text="5.0"/>

    <TextView
      android:id="@+id/tv_date"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintEnd_toEndOf="parent"
      card_view:layout_constraintTop_toBottomOf="@+id/tv_place"
      tools:text="13/11/1987"/>

    <TextView
      android:id="@+id/mag_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/magnitude_type"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toBottomOf="@+id/magnitude"/>

    <TextView
      android:id="@+id/tv_mag_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toEndOf="@+id/mag_type"
      card_view:layout_constraintTop_toTopOf="@+id/mag_type"
      tools:text="ml"/>

    <TextView
      android:id="@+id/significance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/significance"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toBottomOf="@+id/mag_type"/>

    <TextView
      android:id="@+id/tv_significance"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toEndOf="@+id/significance"
      card_view:layout_constraintTop_toTopOf="@+id/significance"
      tools:text="540"/>

    <TextView
      android:id="@+id/alert"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/alert"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toStartOf="parent"
      card_view:layout_constraintTop_toBottomOf="@+id/significance"/>

    <TextView
      android:id="@+id/tv_alert"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1"
      card_view:layout_constraintStart_toEndOf="@+id/alert"
      card_view:layout_constraintTop_toTopOf="@+id/alert"
      tools:text="green"/>

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>